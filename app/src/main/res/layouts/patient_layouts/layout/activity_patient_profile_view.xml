<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/patient_image_civ"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/patient"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name : "/>
            <TextView
                android:id="@+id/patient_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarikul Islam"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Father Name : "/>
            <TextView
                android:id="@+id/patient_father_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sirajul Islam"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mother Name : "/>
            <TextView
                android:id="@+id/patient_mother_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rubia Akter"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender : "/>
            <TextView
                android:id="@+id/patient_gender_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Group : "/>
            <TextView
                android:id="@+id/patient_bloodgroup_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth : "/>
            <TextView
                android:id="@+id/patient_dateofbirth_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05/05/1995"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number : "/>
            <TextView
                android:id="@+id/patient_contact_no_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01834123999"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birth Certificate No : "/>
            <TextView
                android:id="@+id/patient_birth_no_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19953313496000298"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address : "/>
            <TextView
                android:id="@+id/patient_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tahordia,Ulukhola,Kaliganj,Gazipur"/>
        </LinearLayout>
        <Button
            android:id="@+id/patient_profile_edit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"/>
    </LinearLayout>

</ScrollView>