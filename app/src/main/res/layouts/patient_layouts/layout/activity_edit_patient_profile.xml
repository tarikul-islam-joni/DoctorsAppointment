<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:contentDescription="@string/profile_image"
                android:src="@drawable/medical_image_1" />
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_civ_0"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="2dp"
                    android:src="@drawable/male_doc"/>

                <TextView
                    android:id="@+id/text_view_0"
                    android:layout_width="wrap_content"
                    android:layout_height="134dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="-24dp"
                    android:layout_toRightOf="@id/image_civ_0"
                    android:drawableStart="@drawable/image_chooser_2"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:text="@string/upload_profile_image"
                    android:textColor="#FFEB3B"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </FrameLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Basic_Information"
            android:textSize="25sp"
            android:textColor="@color/colorGreen"
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Full_Name"
            android:textColor="#000000"
            android:labelFor="@id/edit_text_0"
            android:textSize="20sp"/>
        <EditText
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:id="@+id/edit_text_0"
            android:inputType="textCapWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_box"
            android:paddingStart="10dp"
            android:paddingEnd="0dp" tools:targetApi="o" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Father_Name"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <EditText
            android:imeOptions="actionNext"
            android:labelFor="@id/edit_text_1"
            android:importantForAutofill="no"
            android:id="@+id/edit_text_1"
            android:inputType="textCapWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_box"
            android:paddingStart="10dp"
            android:paddingEnd="0dp" tools:targetApi="o" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Mother_Name"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <EditText
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:labelFor="@id/edit_text_2"
            android:id="@+id/edit_text_2"
            android:inputType="textCapWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:background="@drawable/edit_text_box" tools:targetApi="o" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Phone_Number"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <EditText
            android:imeOptions="actionDone"
            android:labelFor="@id/edit_text_3"
            android:id="@+id/edit_text_3"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_box"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:importantForAutofill="no" tools:targetApi="o" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Blood_Group"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <Spinner
            android:id="@+id/spinner_0"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:entries="@array/blood_group"
            android:background="@drawable/drop_down_spinner"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Date_Of_Birth"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:background="@drawable/edit_text_box"
                android:visibility="gone"
                android:id="@+id/text_view_1"
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textSize="18sp"
                android:hint="@string/example_date"
                android:textColor="#000000"/>
            <ImageView
                android:background="@drawable/edit_text_box"
                android:id="@+id/image_view_0"
                android:contentDescription="@string/Date_Of_Birth"
                android:layout_weight="1"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/calender_1"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Current_Address"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_text_4"
                android:visibility="gone"
                android:autofillHints="@string/example_address"
                android:background="@drawable/edit_text_box"
                android:gravity="center"
                android:inputType="textCapWords"
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textSize="18sp"
                android:hint="@string/example_address"
                android:textColor="#000000" tools:targetApi="o"/>
            <ImageView
                android:background="@drawable/edit_text_box"
                android:id="@+id/image_view_1"
                android:contentDescription="@string/Date_Of_Birth"
                android:layout_weight="1"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/location"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/I_Am_A"
                android:textColor="#000000"
                android:textSize="20sp"/>
            <RadioGroup
                android:id="@+id/radio_group_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_button_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Male"
                    android:textSize="20sp" />
                <RadioButton
                    android:id="@+id/radio_button_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/Female"/>
            </RadioGroup>
        </LinearLayout>
        <Button
            android:background="@drawable/button_background_3"
            android:id="@+id/button_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Save"
            android:textSize="22sp"/>
    </LinearLayout>
</ScrollView>