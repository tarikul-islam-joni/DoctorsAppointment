<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_civ"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@color/colorRed"/>
        <Button
            android:id="@+id/profile_image_upload_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:text="Upload"/>
        <EditText
            android:id="@+id/profile_full_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:hint="Full Name"/>
        <EditText
            android:id="@+id/profile_father_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:hint="Father's Name"/>
        <EditText
            android:id="@+id/profile_mother_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:hint="Mother's Name"/>
        <EditText
            android:id="@+id/profile_contact_number_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="phone"
            android:imeOptions="actionNext"
            android:hint="Contact Number"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Birth Date "
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/profile_birth_date_et"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="date"
                android:imeOptions="actionNext"
                android:hint="Date"/>
            <EditText
                android:id="@+id/profile_birth_month_et"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="date"
                android:imeOptions="actionNext"
                android:hint="Month"/>
            <EditText
                android:id="@+id/profile_birth_year_et"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="date"
                android:imeOptions="actionDone"
                android:hint="Year"/>
        </LinearLayout>
        <RadioGroup
            android:id="@+id/profile_gender_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/profile_male_rbtn"
                android:checked="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Male"/>
            <RadioButton
                android:id="@+id/profile_female_rbtn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Female"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Blood Group"
                android:textSize="25sp"/>
            <Spinner
                android:id="@+id/profile_blood_group_spinner"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:entries="@array/blood_group"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/profile_address_google_location_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:textColor="@color/colorGreen"
                android:gravity="center"
                android:background="#FFFFFF"
                android:enabled="false"
                android:id="@+id/profile_address_manual_location_et"
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="For more precession click the GPS button"
                android:textSize="20sp"/>
            <ImageView
                android:background="#000000"
                android:layout_gravity="center"
                android:id="@+id/profile_address_google_location_iv"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/location_1" />
        </LinearLayout>
        <Button
            android:id="@+id/profile_save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"/>
    </LinearLayout>
</ScrollView>