<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Provide your information carefully.It can't be re-editable unless we found wrong !"
            android:gravity="center"/>
        <TextView
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Provide your birth certificate information"
            android:gravity="center"/>
        <EditText
            android:id="@+id/bn_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:hint="Birth Certificate Number"/>
        <ImageView
            android:id="@+id/image_view_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@color/colorRed"/>
        <Button
            android:id="@+id/bn_photo_upload_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birth certificate photo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/report_section"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This birth certificate number encountered a problem\nPlease upload another document like NID/Passport/Educational Document that we can verify that it is you."/>
            <ImageView
                android:id="@+id/image_view_2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@color/colorRed"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/upload_another_doc_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload another valid document"/>
        </LinearLayout>
        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"/>
    </LinearLayout>
</ScrollView>