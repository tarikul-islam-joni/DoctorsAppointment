<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_civ"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/patient"/>
        <TextView
            android:gravity="center"
            android:id="@+id/sign_in_up_status_tv"
            android:text="@string/sign_in_up_status"
            android:layout_below="@id/image_civ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#000000"/>
        <LinearLayout
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/choose_patient_doctor_button_section"
            android:layout_below="@id/sign_in_up_status_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:paddingStart="0dp"
                android:paddingEnd="20dp"
                android:drawableEnd="@drawable/select"
                android:background="@drawable/button_background_3"
                android:id="@+id/patient_btn"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="@string/patient"
                android:textSize="20sp" />

            <Button
                android:paddingStart="0dp"
                android:paddingEnd="20dp"
                android:background="@drawable/button_background_1"
                android:id="@+id/doctor_btn"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="@string/doctor"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_below="@id/choose_patient_doctor_button_section"
            android:id="@+id/email_or_phone_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/phone_section"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">
                    <TextView
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/phone_background_1"
                        android:drawableStart="@drawable/phone"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:textSize="20sp"
                        android:text="@string/phone_prefix_hint"
                        android:textColor="#000000"/>
                    <EditText
                        android:autofillHints="@string/phone_et_hint"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:id="@+id/phone_et"
                        android:inputType="phone"
                        android:background="@drawable/phone_background_2"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/phone_et_hint" tools:targetApi="o" />
                </LinearLayout>
                <Button
                    android:id="@+id/phone_entrance_btn"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_background_3"
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:text="@string/get_enter"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/email_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:hintEnabled="false">
                    <EditText
                        android:autofillHints="@string/email_et_hint"
                        android:id="@+id/email_et"
                        android:inputType="textEmailAddress"
                        android:layout_marginBottom="5dp"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="55dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="@drawable/button_background_1"
                        android:drawableStart="@drawable/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email_et_hint" tools:targetApi="o" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:passwordToggleEnabled="true"
                    app:hintEnabled="false">
                    <EditText
                        android:autofillHints="@string/password_et_hint"
                        android:id="@+id/password_et"
                        android:inputType="textPassword"
                        android:layout_marginBottom="5dp"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="@drawable/button_background_1"
                        android:drawableStart="@drawable/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password_et_hint" tools:targetApi="o" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/retype_password_section"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:hintEnabled="false">
                    <EditText

                        android:autofillHints="@string/retype_et_hint"
                        android:id="@+id/retype_password_et"
                        android:inputType="textPassword"
                        android:layout_marginBottom="5dp"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="@drawable/button_background_1"
                        android:drawableStart="@drawable/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/retype_et_hint" tools:targetApi="o" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/email_entrance_btn"
                    android:background="@drawable/button_background_3"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="20sp"
                    android:text="@string/get_enter"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:padding="15dp"
            android:layout_below="@id/email_or_phone_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/TextAppearance.AppCompat.Button">
                <Button
                    style="@style/TextAppearance.AppCompat.Button"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:drawableStart="@drawable/email"
                    android:layout_margin="2dp"
                    android:id="@+id/email_section_btn"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:background="@drawable/button_background_1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="@string/entrance_with_email"
                    android:layout_height="match_parent"/>
                <Button
                    style="@style/TextAppearance.AppCompat.Button"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:drawableStart="@drawable/phone"
                    android:layout_margin="2dp"
                    android:id="@+id/phone_section_btn"
                    android:text="@string/entrance_with_phone_number"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:background="@drawable/button_background_1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:drawableStart="@drawable/googleg_standard_color_18"
                    android:layout_margin="2dp"
                    android:id="@+id/google_entrance_btn"
                    android:text="@string/entrance_with_google_account"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:background="@drawable/button_background_1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

                <LinearLayout
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:layout_margin="2dp"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:background="@drawable/facebook_button_background"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/facebook_entrance_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forget_password"
                android:textSize="18sp"
                android:gravity="center"/>
            <Button
                android:id="@+id/recover_account_btn"
                android:background="@drawable/button_background_2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/recover_your_account"
                android:textSize="20sp"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>