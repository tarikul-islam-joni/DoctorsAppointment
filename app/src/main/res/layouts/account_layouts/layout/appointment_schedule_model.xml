<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_background_2"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Hospital Name"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text_box"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Popular Medical Hospital"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Specialized Field"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text_box"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Cardiology"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Available Day"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text_box"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Saturday,Sunday,Monday"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Time Slot"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:gravity="left|center"
            android:background="@drawable/edit_text_box"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Starting Time"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:gravity="left|center"
            android:background="@drawable/edit_text_box"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Ending Time"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Appointment Capacity"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="50"/>
        <TextView
            android:textSize="18sp"
            android:background="@drawable/edit_text_box"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=" Persons"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Appointment Fee"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="500"/>
        <TextView
            android:textSize="18sp"
            android:background="@drawable/edit_text_box"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Taka"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Advance Leave"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:gravity="left|center"
            android:background="@drawable/edit_text_box"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Starting Date"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:gravity="left|center"
            android:background="@drawable/edit_text_box"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Ending Date"/>
    </LinearLayout>
    <Button
        android:textSize="20sp"
        android:background="@drawable/button_background_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit"/>

</LinearLayout>