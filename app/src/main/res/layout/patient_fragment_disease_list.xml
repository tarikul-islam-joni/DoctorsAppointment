<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/gradient_background_1">
    <LinearLayout
        android:id="@+id/linear_layout_0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <EditText
                android:background="@drawable/design_edit_text_0"
                android:fontFamily="monospace"
                android:id="@+id/edit_text_0"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hint="Search Disease Type..." />
            <Button
                android:id="@+id/button_0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_background_2"
                android:text="Search" />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/disease_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:dividerHeight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/recycler_view_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>