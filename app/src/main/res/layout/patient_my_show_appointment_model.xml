<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linear_layout_0"
    android:background="@drawable/design_edit_text_0"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/linear_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_view_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Rajshahi Medical Hospital"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/text_view_1"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dr.Nayeem Mollicj Joy"/>
        <TextView
            android:id="@+id/text_view_2"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appointment Date : 12-10-2019"/>
        <TextView
            android:id="@+id/text_view_3"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TraxID : Trax Id"/>
        <TextView
            android:id="@+id/text_view_4"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Serial No : 12"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/star_big_off" />
            <ImageView
                android:id="@+id/image_view_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/star_big_off" />
            <ImageView
                android:id="@+id/image_view_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/star_big_off" />
            <ImageView
                android:id="@+id/image_view_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/star_big_off" />
            <ImageView
                android:id="@+id/image_view_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/star_big_off" />
        </LinearLayout>
        <EditText
            android:textColor="@color/colorBlack"
            android:id="@+id/edit_text_0"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/design_edit_text_0"
            android:gravity="start"
            android:hint="Write a review within 150 words....."/>
    </LinearLayout>

    <Button
        android:visibility="gone"
        android:id="@+id/button_0"
        android:background="@drawable/button_background_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write A Short Review" />

</LinearLayout>