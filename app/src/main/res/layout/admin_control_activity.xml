<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background_2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_view_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor Control"
            android:textSize="25sp"
            android:textColor="@color/colorRed"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:gravity="center"/>
        <ListView
            android:background="@drawable/gradient_background_1"
            android:id="@+id/list_view_0"
            android:divider="@color/colorBlack"
            android:dividerHeight="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Account Information"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:fontFamily="monospace"/>
        <TextView
            android:id="@+id/text_view_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="monospace"/>
        <ImageView
            android:id="@+id/image_view_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/image_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/image_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:visibility="gone"
                android:id="@+id/button_0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_1"
                android:text="Verify"/>
            <Button
                android:visibility="gone"
                android:background="@drawable/button_background_1"
                android:id="@+id/button_1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Unverify"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:visibility="gone"
                android:background="@drawable/button_background_1"
                android:id="@+id/button_2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Lock"/>
            <Button
                android:visibility="gone"
                android:background="@drawable/button_background_1"
                android:id="@+id/button_3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="UNLOCK"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>