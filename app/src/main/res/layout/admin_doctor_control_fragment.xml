<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:id="@+id/radio_group_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:background="@drawable/button_background_2"
            android:id="@+id/radio_button_0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Unverified Doctor"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:fontFamily="monospace"/>
        <RadioButton
            android:background="@color/colorPrimary"
            android:id="@+id/radio_button_1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Verified Doctor"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:fontFamily="monospace"/>
        <RadioButton
            android:background="@color/colorPrimary"
            android:id="@+id/radio_button_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Locked Doctor"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:fontFamily="monospace"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edit_text_0"
            android:background="@drawable/edit_text_box"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Search Doctor BMDC Number"/>
        <Button
            android:id="@+id/button_0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Search"
            android:gravity="center"
            android:background="@drawable/button_background_2"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text_view_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status Bar : "
        android:textSize="20sp"
        android:textColor="@color/colorRed"
        android:background="@drawable/edit_text_box"
        android:gravity="center"/>
    <ListView
        android:layout_margin="3dp"
        android:id="@+id/list_view_0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>