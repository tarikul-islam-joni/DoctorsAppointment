<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_1">

    <TextView
        android:text="Select Division"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:id="@+id/text_view_0"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/drop_down_spinner_1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <EditText
                android:background="@drawable/design_edit_text_0"
                android:fontFamily="monospace"
                android:id="@+id/edit_text_0"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hint="Search Doctor Name..." />

            <Button
                android:id="@+id/button_0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_background_2"
                android:text="Search" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/recycler_view_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>