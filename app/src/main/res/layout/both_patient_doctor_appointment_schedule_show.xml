<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/gradient_background_2">

    <TextView
        android:id="@+id/heading_text_view"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="18sp" />
    <LinearLayout
        android:id="@+id/linear_layout_0_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_view_0_0"
            android:textStyle="bold"
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Hospital Name"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/text_view_0"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text_box"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout_0_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_view_0_1"
            android:textStyle="bold"
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Specialized Field"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/text_view_1"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text_box"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout_0_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_view_0_2"
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Available Day"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/text_view_2"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text_box"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout_0_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_view_0_3"
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Time Slot"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/text_view_3"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:gravity="left|center"
            android:background="@drawable/edit_text_box"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/text_view_4"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:gravity="left|center"
            android:background="@drawable/edit_text_box"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout_0_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_view_0_4"
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Appointment Capacity"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/text_view_5"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/edit_text_box"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=" Persons"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout_0_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_view_0_5"
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Appointment Fee"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/text_view_6"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/edit_text_box"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Taka"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout_0_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_view_0_6"
            android:background="@drawable/edit_text_box"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Advance Leave"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/text_view_7"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:gravity="left|center"
            android:background="@drawable/edit_text_box"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/text_view_8"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:gravity="left|center"
            android:background="@drawable/edit_text_box"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linear_layout_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_0"
            android:textSize="18sp"
            android:fontFamily="serif-monospace"
            android:background="@drawable/button_background_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="DELETE"/>
        <Button
            android:id="@+id/button_1"
            android:layout_weight="1"
            android:textSize="18sp"
            android:fontFamily="serif-monospace"
            android:background="@drawable/button_background_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Edit"/>
    </LinearLayout>
    <Button
        android:id="@+id/button_2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Appointment"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_background_3"/>

</LinearLayout>